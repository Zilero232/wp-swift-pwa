{
	"name": "zilero/wp-swift-pwa",
	"description": "Swift PWA is a plugin that allows you to create a Progressive Web App for your WordPress site.",
	"version": "1.0.0",
	"license": "GPL-3.0-or-later",
	"authors": [
		{
			"name": "zilero",
			"email": "sasha.artemev.1002@mail.ru"
		}
	],	
	"scripts": {
		"lint": "phpcs --standard=phpcs.xml --extensions=php --ignore=vendor/,node_modules/,build/ -n .",
		"lint:fix": "phpcbf --standard=phpcs.xml --extensions=php --ignore=vendor/,node_modules/,build/ .",
		"lint:changed": "phpcs-changed --git --git-base=main --standard=phpcs.xml"
	},
	"require": {
		"kucrut/vite-for-wp": "^0.12.0"
	},
	"require-dev": {
		"wp-coding-standards/wpcs": "^3.2",
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"sirbrillig/phpcs-changed": "^2.12"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
